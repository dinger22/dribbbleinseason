<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shot_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_space_m"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shot_action_view"
                android:layout_width="@dimen/shot_action_size"
                android:layout_height="@dimen/shot_action_size"
                android:src="@drawable/ic_visibility_black_24dp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/shot_view_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                tools:text="1000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shot_action_like"
                android:layout_width="@dimen/shot_action_size"
                android:layout_height="@dimen/shot_action_size"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/shot_like_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                tools:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shot_action_bucket"
                android:layout_width="@dimen/shot_action_size"
                android:layout_height="@dimen/shot_action_size"
                android:src="@drawable/ic_archive_black_24dp"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/shot_bucket_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                tools:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shot_action_share"
                android:layout_width="@dimen/shot_action_size"
                android:layout_height="@dimen/shot_action_size"
                android:src="@drawable/ic_share_black_24dp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/shot_share_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:text="@string/share" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_space_m">

        <ImageView
            android:id="@+id/shot_author_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/padding_space_m"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:src="@drawable/shot_place_holder"/>

        <TextView
            android:id="@+id/shot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shot_author_picture"
            android:layout_toRightOf="@id/shot_author_picture"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:text="Shot title" />

        <TextView
            android:id="@+id/shot_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shot_title"
            android:layout_below="@id/shot_title"
            tools:text="Shot author" />

    </RelativeLayout>

    <TextView
        android:id="@+id/shot_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_space_s"
        tools:text="Shot description\nShot description\nShot description\nShot description" />

</LinearLayout>